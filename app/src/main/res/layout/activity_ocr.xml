<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">
        <com.inspect.ocr.OcrImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight = "0.9"
            android:layout_centerHorizontal="false"
            android:src="@drawable/ic_camera"
            android:onClick="rotateImage"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.1">
            <LinearLayout
                android:id="@+id/btn_container_1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/imageView"
                android:orientation="horizontal"
                android:weightSum="2">
                <Button
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1"
                    android:text="Choose image to recognize"
                    android:background="@xml/button_bg_rounded_corners"
                    style="@style/button_large"
                    android:onClick="selectImage"/>
                <Button
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1"
                    android:text="Capture to recognize"
                    android:background="@xml/button_bg_rounded_corners"
                    style="@style/button_large"
                    android:onClick="takePicture"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_container_2"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/imageView"
                android:orientation="horizontal"
                android:weightSum="2">
                <Button
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1"
                    android:text="Try again"
                    android:background="@xml/button_bg_rounded_corners"
                    style="@style/button_large"
                    android:onClick="cancel"/>
                <Button
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_margin="4dip"
                    android:layout_weight="1"
                    android:text="Recognize"
                    android:background="@xml/button_bg_rounded_corners"
                    style="@style/button_large"
                    android:onClick="startRecognizing"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:id="@+id/notify_container"
        android:layout_margin="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"
            android:background="@xml/txt_bg"
            style="@style/text_large"
            android:text="Touch the screen to rotate the image.\nMake the image to keep straight."
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_centerInParent="true"
        android:background="@color/black_opa"
        android:id="@+id/progress_container">
        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_gravity="center_vertical"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:theme="@style/progressBarBlue"
            android:progressDrawable="@xml/circular_progress_bar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressBar"
            android:background="@xml/txt_bg"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            style="@style/text_large"
            android:padding="10dp"
            android:id="@+id/hint_txt"
            android:text="Recognizing..."
            />
    </RelativeLayout>
</RelativeLayout>
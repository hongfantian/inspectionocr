<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="progressBarBlue" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/green</item>
    </style>
    <style name="DatePicker" parent="@android:style/Theme">
        <item name="android:datePickerStyle">@android:style/Widget.DatePicker</item>
    </style>

    <!-- Medicine book-->
    <style name="AppMaterialTheme" parent="BaseTheme" />

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>


    <style name="ChannelButton" parent="BaseTheme">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="MaterialBlue" parent="android:Theme.Holo.Light"></style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>

    <style name="text_large" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@xml/button_dark_text</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="text_large_black" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="text_large_normal" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="button_large" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@xml/button_dark_text</item>
        <item name="android:textSize">18dp</item>
        <item name="android:clickable">true</item>
        <item name="android:soundEffectsEnabled">false</item>
    </style>
    <!-- End of Medicine book-->
</resources>
